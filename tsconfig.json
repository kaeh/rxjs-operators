{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/esm",
    "declaration": true,
    "declarationDir": "./dist/types",
    "moduleResolution": "Node"
  },
  "include": ["./src"],
  "exclude": ["src/**/*.spec.ts"],
  "lib": ["es2015"]
}
